testpath=/usr/local/bin

fullname=$1
name=${fullname%%.*}
extension=${fullname#*.}

if [[ -z "$fullname" ]];
then
	mkdir untitled
	touch untitled/Makefile
	touch untitled/untitled

	else
		mkdir $name

		if [[ $extension == 'c' ]]
		then
			. $testpath/templates/c.sh

		elif [[ $extension == 'cpp' ]]
		then
			. $testpath/templates/cpp.sh

		elif [[ $extension == 'pas' ]]
		then
			. $testpath/templates/pas.sh

		elif [[ $extension == 'py' ]]
		then
			. $testpath/templates/py.sh

		elif [[ $extension == 'java' ]]
		then
			. $testpath/templates/java.sh

		elif [[ $extension == 'html' ]]
		then
			. $testpath/templates/html.sh

		elif [[ $extension == $fullname ]]
		then
			touch $name/$name
			touch $name/Makefile

		else
			echo "Undefined extension"
			touch $name/$fullname
		fi
fi

